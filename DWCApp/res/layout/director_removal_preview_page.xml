<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Director Name:"
        android:textStyle="bold"
        android:id="@+id/textView49"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:gravity="center"
        android:id="@+id/tvDirecotName"
        android:layout_alignBottom="@+id/textView49"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView49" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Total Amount:"
        android:textStyle="bold"
        android:id="@+id/textView50"
        android:layout_below="@+id/tvDirecotName"
        android:layout_alignStart="@+id/textView49"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:gravity="center"
        android:id="@+id/tvTotalAmount"
        android:layout_alignTop="@+id/textView50"
        android:layout_alignStart="@+id/tvDirecotName"
        android:layout_alignEnd="@+id/tvDirecotName" />
</RelativeLayout>