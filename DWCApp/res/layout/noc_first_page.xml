<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/linearBottom"
    android:layout_below="@+id/linear"
    android:layout_marginBottom="@dimen/activity_top_margin"
    android:background="@color/noc_below_background"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <custom.MaterialSpinner
            android:id="@+id/spinnerNOCType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/my_background"
            android:gravity="center"
            app:ms_alignLabels="false"
            app:ms_arrowColor="@color/noc_grey"
            app:ms_arrowSize="16dp"
            app:ms_baseColor="@color/black"
            app:ms_errorColor="@color/error_color"
            app:ms_floatingLabelColor="@color/black"
            app:ms_floatingLabelText="NOC Type"
            app:ms_highlightColor="@color/noc_grey"
            app:ms_hint="NOC Type"
            app:ms_multiline="false" />

        <custom.MaterialSpinner
            android:id="@+id/spinnerChooseAuthority"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerNOCType"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/my_background"
            android:gravity="center"
            app:ms_alignLabels="false"
            app:ms_arrowColor="@color/noc_grey"
            app:ms_arrowSize="16dp"
            app:ms_baseColor="@color/black"
            app:ms_errorColor="@color/error_color"
            app:ms_floatingLabelColor="@color/black"
            app:ms_floatingLabelText="Choose Authority"
            app:ms_highlightColor="@color/noc_grey"
            app:ms_hint="Choose Authority"
            app:ms_multiline="false" />

        <custom.MaterialSpinner
            android:id="@+id/spinnerChooseLanguage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerChooseAuthority"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/my_background"
            android:gravity="center"
            app:ms_alignLabels="false"
            app:ms_arrowColor="@color/noc_grey"
            app:ms_arrowSize="16dp"
            app:ms_baseColor="@color/black"
            app:ms_errorColor="@color/error_color"
            app:ms_floatingLabelColor="@color/black"
            app:ms_floatingLabelText="Choose language"
            app:ms_highlightColor="@color/noc_grey"
            app:ms_hint="Choose language"
            app:ms_multiline="false" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/spinnerChooseLanguage"
            android:layout_below="@+id/spinnerChooseLanguage"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/edit_text_rounded_corners"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:hint="AED 0"
            android:textColorHint="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etPrice"
            android:layout_alignBottom="@+id/etPrice"
            android:layout_alignStart="@+id/spinnerChooseLanguage"
            android:text="Service Price"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_label"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>