<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:text="Card Type"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/etCardType"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView18"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/textView18"
        android:background="@drawable/search_edit_text_background"
        android:gravity="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView18"
        android:layout_below="@+id/spinnerDuration"
        android:layout_marginTop="30dp"
        android:text="Record To Process"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/etRecordToProcess"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView19"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@+id/textView19"
        android:background="@drawable/search_edit_text_background"
        android:gravity="center"
        android:textSize="10sp" />

    <Spinner
        android:id="@+id/spinnerDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etCardType"
        android:layout_below="@+id/etCardType"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/spinner_background" />

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/spinnerDuration"
        android:layout_marginRight="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="15dp"
        android:text="Duration"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>