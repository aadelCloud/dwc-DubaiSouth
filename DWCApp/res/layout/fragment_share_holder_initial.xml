<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Transfer From"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/transferFrom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/label"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/search_edit_text_background"
                android:enabled="false"
                android:gravity="center"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Transfer To"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

            </LinearLayout>
            <Spinner
                android:id="@+id/transferTo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/spinner_background"
                android:gravity="center" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Total No. of Shares"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/noOfShares"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/label"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/search_edit_text_background"
                android:enabled="false"
                android:gravity="center"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="No of Transferred Shares"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/NoofTransferredShares"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/label"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="numberDecimal"
                android:layout_marginTop="10dp"
                android:background="@drawable/search_edit_text_background"
                android:gravity="center"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>