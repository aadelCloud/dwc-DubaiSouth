<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context="fragmentActivity.NeedHelpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/spinnetNeedHelpType"
            android:layout_alignStart="@+id/spinnetNeedHelpType"
            android:layout_marginTop="10dp"
            android:text="Type"
            android:textSize="16sp"
            android:textStyle="bold" />

        <custom.MaterialSpinner
            android:id="@+id/spinnetNeedHelpType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/my_background"
            android:gravity="center"
            app:ms_alignLabels="false"
            app:ms_arrowColor="@color/noc_grey"
            app:ms_arrowSize="12dp"
            app:ms_baseColor="@color/black"
            app:ms_errorColor="@color/error_color"
            app:ms_floatingLabelColor="@color/black"
            app:ms_highlightColor="@color/noc_grey"
            app:ms_multiline="false" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/spinnetNeedHelpType"
            android:layout_alignStart="@+id/spinnetNeedHelpType"
            android:layout_below="@+id/spinnetNeedHelpType"
            android:layout_marginTop="10dp"
            android:text="Subject"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etCaseSubject"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="15dp"
            android:background="@drawable/search_edit_text_background"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/etCaseSubject"
            android:layout_alignStart="@+id/etCaseSubject"
            android:layout_below="@+id/etCaseSubject"
            android:layout_marginTop="33dp"
            android:imeOptions="actionDone"
            android:text="Description"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_alignEnd="@+id/textView13"
            android:layout_alignStart="@+id/textView13"
            android:layout_below="@+id/textView13"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/search_edit_text_background"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignEnd="@+id/etDescription"
            android:layout_alignStart="@+id/etDescription"
            android:layout_below="@+id/etDescription"
            android:layout_marginTop="37dp"
            android:background="@color/dwc_blue_color"
            android:text="Submit"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>