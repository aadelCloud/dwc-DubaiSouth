<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_green"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <custom.MaterialSpinner
                android:id="@+id/spinnerStatus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/my_background"
                android:gravity="center"
                app:ms_alignLabels="false"
                app:ms_arrowColor="@color/noc_grey"
                app:ms_arrowSize="16dp"
                app:ms_baseColor="@color/black"
                app:ms_errorColor="@color/error_color"
                app:ms_floatingLabelColor="@color/black"
                app:ms_floatingLabelText="Status Filter"
                app:ms_highlightColor="@color/noc_grey"
                app:ms_multiline="false" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <custom.MaterialSpinner
                android:id="@+id/spinnerType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/my_background"
                android:gravity="center"
                app:ms_alignLabels="false"
                app:ms_arrowColor="@color/noc_grey"
                app:ms_arrowSize="16dp"
                app:ms_baseColor="@color/black"
                app:ms_errorColor="@color/error_color"
                app:ms_floatingLabelColor="@color/black"
                app:ms_floatingLabelText="NOC Type"
                app:ms_highlightColor="@color/noc_grey"
                app:ms_multiline="false" />

        </RelativeLayout>

    </LinearLayout>

    <custom.PullAndLoadListView
        android:id="@+id/pullandloadMyRequests"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp">

    </custom.PullAndLoadListView>

</LinearLayout>